@import "compass/css3";

a {
  color: #0000FF;
  img { border: none; }
}

.clear {
  clear: both;
  height: 0;
  overflow: hidden;
}

#tag_cloud {
  width: 400px;
  margin-bottom: 2em;
  line-height: 1.6em;
  .s { font-size: 0.8em; }
  .m { font-size: 1.2em; }
  .l { font-size: 1.8em; }
}

#product {
  clear: both;
}

.product {
  border: solid 1px #CCC;
  padding: 10px;
  float: left;
  margin-right: 20px;
  margin-bottom: 20px;
  @include box-shadow(hsla(1,1,1,.2) 1px 2px 4px);
  background: white;

  .name {
    padding-top: 5px;
    text-align: center;
    font-weight: bold;
  }

  .description {
    width: 200px;
  }

  .actions {
    font-size: 10px;
    text-align: center;
    color: #777;
  }
}

.upload {
  border-top: solid 1px #CCC;
  width: 400px;
  padding-top: 10px;
  margin-top: 10px;

  .progress {
    margin-top: 8px;
    border: solid 1px #555;
    border-radius: 3px;
    -moz-border-radius: 3px;
    .bar {
      height: 10px;
      background: #3EC144;
    }
  }
}

// Show

.full-size-img {
  @include border-radius(20px);
  margin-top: 40px;
  width: 100%;
}
