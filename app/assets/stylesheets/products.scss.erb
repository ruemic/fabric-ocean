@import "compass/css3";

a {
  color: #0157BD;
  img { border: none; }
}

.clear {
  clear: both;
  height: 0;
  overflow: hidden;
}

#tag_cloud {
  width: 400px;
  margin-bottom: 2em;
  line-height: 1.6em;
  .s { font-size: 0.8em; }
  .m { font-size: 1.2em; }
  .l { font-size: 1.8em; }
}

#product {
  clear: both;
}

.product {
  position: relative;
  border: solid 1px #CCC;
  padding: 10px;
  float: left;
  margin-right: 20px;
  margin-bottom: 20px;
  @include box-shadow(hsla(1,1,1,.2) 1px 2px 4px);
  background: transparentize(white,.2);
  &.favorited {
    border: 3px solid transparentize(black,.2);
    .fav-star {
      font-size: 40px;
      color: #FFEB00;
      @include text-shadow(rgba(blue, 0.8) 1px 2px 0);
      &:before {
        top: -2px;
        left: 2px;
        content: "\2605";
        position: absolute;
        font-size: 35px;
        color: #FFEB00;
        @include text-shadow(rgba(blue, 0.2) 1px 2px 0);
      }
    }
  }

  .name {
    padding-top: 5px;
    text-align: center;
    font-weight: bold;
  }

  .description {
    width: 200px;
  }

  .favorite-toggle {
    top: 230px;
    right: 20px;
    position: absolute;
    .un-fav {
      position: absolute;
      width: 40px;
      height: 40px;
      display: block;
      a {
        top: 10px;
        right: 82px;
        width: 40px;
        height: 40px;
        display: block;
        background: red;
      }
    }
  }


  .actions {
    font-size: 10px;
    text-align: center;
    color: #777;
  }
}

.upload {
  border-top: solid 1px #CCC;
  width: 400px;
  padding-top: 10px;
  margin-top: 10px;

  .progress {
    margin-top: 8px;
    border: solid 1px #555;
    border-radius: 3px;
    -moz-border-radius: 3px;
    .bar {
      height: 10px;
      background: #3EC144;
    }
  }
}

//
.gallery-name {
  font-size: 3em;
  color: darken(#eee,60%);
  text-shadow: 0 -1px 0 darken(white,10%), 1px 1px 0 lighten(black,70%);
}

// Show

.full-size-img {
  @include border-radius(20px);
  margin-top: 40px;
  width: 100%;
}

.pagination {
  width: 500px;
  margin: 20px 0px;
  cursor: default;
  height: 22px;
  a, span, em {
    padding: 0.2em 0.5em;
    display: block;
    float: left;
    margin-right: 1px;
  }
  .disabled {
    display: none;
  }
  .current {
    font-style: normal;
    font-weight: bold;
    background: #2e6ab1;
    color: white;
    border: 1px solid #2e6ab1;
  }
  a {
    text-decoration: none;
    color: #105cb6;
    border: 1px solid #9aafe5;
    &:hover, &:focus {
      color: #000033;
      border-color: #000033;
    }
  }
  .page_info {
    background: #2e6ab1;
    color: white;
    padding: 0.4em 0.6em;
    width: 22em;
    margin-bottom: 0.3em;
    text-align: center;
    b {
      color: #000033;
      background: #2e6ab1 + 60;
      padding: 0.1em 0.25em;
    }
  }
}
