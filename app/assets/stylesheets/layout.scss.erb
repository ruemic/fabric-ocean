html, body {
  height: 100%;
  background-color: #4B7399;
  background-image: url('low_contrast_linen.png') ;
  font-family: Verdana, Helvetica, Arial;
  font-size: 14px;
}


#container {
  width: 80%;
  margin: 0 auto;
  background-color: #A8A8A8;
  background-image: url('tiny_grid.png') ;
  padding: 20px 40px;
  border: solid 1px black;
  margin-top: 20px;
  border-radius: 5px;
}

#flash_notice, #flash_alert {
  width: 50%;
  padding: 5px 8px;
  margin: 10px 0;
}

#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
}

#flash_alert {
  background-color: #FCC;
  border: solid 1px #C66;
}

.error_messages, #error_explanation {
  width: 400px;
  border: 2px solid #CF0000;
  padding: 0px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  font-size: 12px;

  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 10px;
    font-size: 12px;
    margin: 0;
    background-color: #c00;
    color: #fff;
  }

  p { margin: 8px 10px; }
  ul { margin-bottom: 0; }
}

.field_with_errors {
  display: inline;
}

form .field, form .actions {
  margin: 12px 0;
}

#user-nav {
  width: auto;
  padding: .5em;
  position: absolute;
  top: 36px;
  right: 10%;
  text-align: right;
  background: rgba(184, 184, 184,.3);
}
